<h1>Edit Book</h1>
<%= form_for [current_user, @book] do |f| %>
  <div class="form-group" >
    <%= f.label :name %>
    <%= f.text_field :name,autofocus: true,class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.text_field :image,autofocus: true,class: 'form-control'%>
  </div>
  <%= f.submit "Update Book" ,class: 'btn btn-primary' %>
<% end %>
