<h1>Add Book</h1>
<%= form_for(@book,as: :book,url: addbook_user_path(current_user)) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,autofocus: true,class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.text_field :image,autofocus: true,class: 'form-control'%>
  </div>
  <%= f.submit "Add Book" ,class: 'btn btn-primary' %>
<% end %>
